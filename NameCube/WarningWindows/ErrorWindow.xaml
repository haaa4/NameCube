<ui:FluentWindow
    x:Class="NameCube.WarningWindows.ErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.WarningWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ErrorWindow"
    Width="800"
    Height="450"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ui:TitleBar
            Grid.Row="0"
            Icon="{ui:ImageIcon 'pack://application:,,,/icon.ico'}"
            ShowMaximize="False"
            ShowMinimize="False" />
        <Grid Grid.Row="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="30" />
                <RowDefinition Height="200" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ui:SymbolIcon
                    FontSize="50"
                    Foreground="Red"
                    Symbol="ErrorCircle24" />
                <TextBlock
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="啊哦，发生了意料之外的错误..." />
            </Grid>
            <TextBlock
                Grid.Row="1"
                Margin="10,0,0,0"
                FontSize="14"
                Foreground="Gray"
                Text="点鸣魔方发生了未处理的问题，如果你需要，请尝试反馈一下，但是你需要重现一下步骤，因为日志还不完善（笑" />
            <ui:TextBox
                x:Name="ErrorTextBox"
                Grid.Row="2"
                Margin="10"
                FontFamily="Consolas"
                FontSize="14"
                IsReadOnly="True"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <StackPanel
                Grid.Row="3"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <ui:Button
                    Margin="10"
                    Appearance="Caution"
                    Click="Button_Click"
                    Content="忽略此报错" />
                <ui:Button
                    Margin="10"
                    Click="Button_Click_1"
                    Content="关闭应用" />
                <ui:Button
                    Margin="10"
                    Appearance="Primary"
                    Click="Button_Click_2"
                    Content="重启应用" />
                <ui:HyperlinkButton
                    Margin="10"
                    Content="反馈问题"
                    NavigateUri="https://github.com/haaa4/NameCube?tab=readme-ov-file#%E9%81%87%E5%88%B0%E9%97%AE%E9%A2%98%E9%9C%80%E8%A6%81%E5%8F%8D%E9%A6%88" />
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
