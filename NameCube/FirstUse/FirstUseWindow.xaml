<ui:FluentWindow
    x:Class="NameCube.FirstUse.FirstUseWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.FirstUse"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mode="clr-namespace:NameCube.Mode"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="点鸣魔方"
    Width="1000"
    Height="450"
    Closing="FluentWindow_Closing"
    Icon="pack://application:,,,/icon.ico"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <ui:TitleBar
            Title="点鸣魔方"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Icon="{ui:ImageIcon 'pack://application:,,,/icon.png'}" />
        <ui:NavigationView
            x:Name="NavigationMenu"
            Grid.Row="1"
            Grid.Column="1"
            MinHeight="300"
            Margin="0"
            IsBackButtonVisible="Auto"
            IsPaneToggleVisible="True"
            PaneDisplayMode="Bottom" />
        <Rectangle
            x:Name="rec"
            Grid.Row="1"
            Grid.Column="1"
            Height="30"
            VerticalAlignment="Bottom"
            Fill="White" />
        <StackPanel Grid.Row="1">
            <TextBlock
                x:Name="Title"
                Margin="20,0,0,0"
                FontSize="40"
                FontWeight="Black"
                Text="欢迎！" />
            <TextBlock
                x:Name="Text"
                Margin="10,0,0,0"
                FontSize="20"
                Text="欢迎来到点鸣魔方，在使用软件前，我们需要进行一些设置"
                TextWrapping="Wrap" />
            <ui:Button
                Margin="10,30,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Appearance="Primary"
                Click="Button_Click"
                Content="  继续  " />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
