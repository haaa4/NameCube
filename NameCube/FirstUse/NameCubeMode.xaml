<Page
    x:Class="NameCube.FirstUse.NameCubeMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NameCubeMode"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <RadioButton
            x:Name="RadioButton1"
            Margin="20,20,20,0"
            Click="RadioButton_Click"
            Content="长期运行模式"
            IsChecked="True" />
        <TextBlock
            Margin="20,0,0,0"
            FontSize="20"
            Text="此模式下，应用将在后台长期运行，可以更快地通过各种方式（如悬浮球）启动软件"
            TextWrapping="Wrap" />
        <!--  bug  -->
        <MediaElement
            x:Name="Media1"
            Width="300"
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            LoadedBehavior="Manual"
            MediaEnded="Media1_MediaEnded"
            Source="pack://application:,,,/Video/1.mp4" />
        <RadioButton
            Margin="20,20,20,0"
            Click="RadioButton_Click"
            Content="单次运行模式" />
        <TextBlock
            Margin="20,0,0,0"
            FontSize="20"
            Text="此模式下，应用只会显示在前台，关闭窗口即关闭应用"
            TextWrapping="Wrap" />
        <!--  bug  -->
        <MediaElement
            x:Name="Media2"
            Width="300"
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            LoadedBehavior="Manual"
            MediaEnded="Media2_MediaEnded"
            MediaFailed="Media2_MediaFailed"
            Source="pack://application:,,,/Video/2.mp4" />
    </StackPanel>
</Page>
