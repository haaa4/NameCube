<ui:FluentWindow
    x:Class="NameCube.ToolBox.ToolboxWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Toolbox="clr-namespace:NameCube.ToolBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="小工具"
    Width="1200"
    Height="700"
    Loaded="FluentWindow_Loaded"
    mc:Ignorable="d">
    <ui:FluentWindow.Resources>
        <Storyboard x:Key="ShowStoryBoard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1" />
                <EasingDoubleKeyFrame KeyTime="00:00:00.6000000" Value="1" />
                <EasingDoubleKeyFrame KeyTime="00:00:01" Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </ui:FluentWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ui:TitleBar
            Title="小工具"
            Grid.Row="0"
            Icon="{ui:ImageIcon 'pack://application:,,,/icon.ico'}" />
        <ui:NavigationView
            x:Name="NavigationMenu"
            Grid.Row="1"
            MinHeight="300"
            Margin="0"
            IsBackButtonVisible="Auto"
            IsPaneToggleVisible="True"
            PaneDisplayMode="Left">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="自定义朗读"
                    Icon="{ui:SymbolIcon Symbol=PersonVoice24}"
                    TargetPageType="{x:Type Toolbox:SpeechToolbox}" />
                <ui:NavigationViewItem
                    Content="内存"
                    Icon="{ui:SymbolIcon Symbol=Memory16}"
                    TargetPageType="{x:Type Toolbox:MemoryToolbox}" />
                <ui:NavigationViewItem
                    Content="自动关机"
                    Icon="{ui:SymbolIcon Symbol=Power24}"
                    TargetPageType="{x:Type Toolbox:ShutDown}" />
                <ui:NavigationViewItem
                    Content="自动流程"
                    Icon="{ui:SymbolIcon Symbol=ArrowWrap20}"
                    TargetPageType="{x:Type Toolbox:AutomaticProcess}" />

            </ui:NavigationView.MenuItems>
            <ui:NavigationView.PaneHeader>
                <ui:Button Icon="{ui:SymbolIcon Symbol=ArrowClockwise24}">
                    <ui:FlyoutService.Flyout>
                        <ui:Flyout Placement="Bottom">
                            <StackPanel>
                                <TextBlock HorizontalAlignment="Left" Text="你确定重启应用吗？" />
                                <Button Click="Button_Click" Content="确定" />
                            </StackPanel>
                        </ui:Flyout>
                    </ui:FlyoutService.Flyout>
                </ui:Button>
            </ui:NavigationView.PaneHeader>
        </ui:NavigationView>
        <Border
            x:Name="border"
            Grid.RowSpan="2"
            d:IsHidden="True"
            Background="White"
            BorderBrush="White"
            BorderThickness="1"
            Visibility="Visible">
            <Canvas>
                <Image
                    Canvas.Left="362.756"
                    Canvas.Top="243.373"
                    Width="189"
                    Height="192"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Source="/icon.png"
                    Stretch="Fill" />
                <TextBlock
                    Canvas.Left="556.756"
                    Canvas.Top="290.373"
                    Width="420"
                    Height="145"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Black"
                    FontSize="72"
                    Foreground="#FF212121"
                    TextWrapping="Wrap"><Run Language="zh-cn" Text="小工具" /></TextBlock>
            </Canvas>
        </Border>
        <ui:SnackbarPresenter x:Name="SnackbarPresenterHost" Grid.Row="1" />
    </Grid>
</ui:FluentWindow>
