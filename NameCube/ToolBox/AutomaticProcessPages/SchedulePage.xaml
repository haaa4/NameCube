<Page
    x:Class="NameCube.ToolBox.AutomaticProcessPages.SchedulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.ToolBox.AutomaticProcessPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SchedulePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    SizeChanged="Page_SizeChanged"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Rectangle
            Margin="5"
            Fill="#f5f1f1"
            RadiusX="10"
            RadiusY="10" />
        <TextBlock Margin="10" Text="选择流程组" />
        <ui:ListView
            x:Name="TimeListView"
            Margin="10,40,10,10"
            ItemsSource="{Binding processesGroupList}"
            SelectionChanged="TimeListView_SelectionChanged">
            <ui:ListView.ContextMenu>
                <ContextMenu x:Name="ListViewContextMenu" Opened="ListViewContextMenu_Opened">
                    <MenuItem
                        Click="MenuItem_Click"
                        Foreground="Red"
                        Header="删除"
                        Icon="{ui:SymbolIcon Symbol=Delete24}" />
                </ContextMenu>
            </ui:ListView.ContextMenu>
        </ui:ListView>
        <Rectangle
            Grid.Column="1"
            Margin="5"
            Fill="#f5f1f1"
            RadiusX="10"
            RadiusY="10" />
        <StackPanel
            x:Name="Part2"
            Grid.Column="1"
            IsEnabled="False">
            <TextBlock
                Grid.Column="1"
                Margin="10"
                Text="详细设置" />
            <TextBlock
                x:Name="ProcessesGroupTextBlock"
                HorizontalAlignment="Center"
                FontSize="18"
                Text="流程组" />
            <ComboBox
                x:Name="ProcessesPicker"
                Margin="20"
                ItemsSource="{Binding processesChooseList}"
                SelectionChanged="ProcessesPicker_SelectionChanged" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="18"
                Text="时间" />
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <ComboBox
                    x:Name="TimePicker1"
                    Margin="5"
                    ItemsSource="{Binding picker1}" />
                <ComboBox
                    x:Name="TimePicker2"
                    Grid.Column="1"
                    Margin="5"
                    ItemsSource="{Binding picker2}" />
                <ComboBox
                    x:Name="TimePicker3"
                    Grid.Column="2"
                    Margin="5"
                    ItemsSource="{Binding picker3}" />
                <TextBlock
                    x:Name="HourTextBlock"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Text="时" />
                <TextBlock
                    x:Name="MinutesTextBlock"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Text="分" />
                <TextBlock
                    x:Name="SecondTextBlock"
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Text="秒" />
            </Grid>
            <ui:Button
                x:Name="AddButton"
                Margin="20"
                Click="AddButton_Click"
                Content="新建"
                Foreground="Green"
                Icon="{ui:SymbolIcon Symbol=Add24}" />
            <ui:Button
                x:Name="SaveButton"
                Margin="20,0,20,0"
                Click="SaveButton_Click"
                Content="保存"
                Foreground="Green"
                Icon="{ui:SymbolIcon Symbol=Save24}" />
        </StackPanel>
    </Grid>
</Page>
