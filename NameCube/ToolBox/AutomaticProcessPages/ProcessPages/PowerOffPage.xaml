<Page
    x:Class="NameCube.ToolBox.AutomaticProcessPages.ProcessPages.PowerOffPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.ToolBox.AutomaticProcessPages.ProcessPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="PowerOffPage"
    d:DesignHeight="350"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            FontSize="40"
            FontWeight="Black"
            Text="自动关机" />
        <TextBlock
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="10,20,0,0"
            HorizontalAlignment="Center"
            FontSize="20"
            Text="根据用户设置，电脑即将关机，是否继续？" />

        <ui:Button
            x:Name="PowerOffButton"
            Grid.Row="2"
            Width="120"
            Margin="0,80,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="PowerOffButton_Click"
            Content="关机"
            FontSize="30"
            Icon="{ui:SymbolIcon Symbol=Power24,
                                 FontSize=20}" />
        <ui:Button
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Appearance="Primary"
            Click="Button_Click"
            Icon="{ui:SymbolIcon Symbol=ArrowCircleRight24,
                                 FontSize=40}">
            <TextBlock FontSize="40" Text="继续使用电脑" />
        </ui:Button>
    </StackPanel>
</Page>
