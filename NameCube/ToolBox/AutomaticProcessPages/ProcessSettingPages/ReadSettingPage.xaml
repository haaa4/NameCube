<Page
    x:Class="NameCube.ToolBox.AutomaticProcessPages.ProcessSettingPages.ReadSettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.ToolBox.AutomaticProcessPages.ProcessSettingPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ReadSettingPage"
    d:DesignHeight="350"
    d:DesignWidth="410"
    Background="#f5f1f1"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="文本内容" />
        <ui:TextBox
            x:Name="TextTextBox"
            Grid.Column="1"
            MaxHeight="180"
            Margin="5"
            TextChanged="TextTextBox_TextChanged"
            TextWrapping="WrapWithOverflow" />
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="展示时间" />
        <ui:NumberBox
            x:Name="TimeNumberBox"
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            LostFocus="TimeNumberBox_LostFocus"
            Maximum="3600"
            Minimum="1"
            ValueChanged="TimeNumberBox_ValueChanged" />
        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="启用朗读" />
        <CheckBox
            x:Name="ReadCheckBox"
            Grid.Row="2"
            Grid.Column="2"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="ReadCheckBox_Checked" />

    </Grid>
</Page>
