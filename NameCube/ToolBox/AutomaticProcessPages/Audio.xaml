<Page
    x:Class="NameCube.ToolBox.AutomaticProcessPages.Audio"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.ToolBox.AutomaticProcessPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Audio"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.Resources>
        <local:IconToImageSourceConverter x:Key="IconConverter" />
    </Page.Resources>
    <StackPanel>
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">
            <ui:Button
                x:Name="AddButton"
                Margin="10,10"
                Click="AddButton_Click"
                Content="添加音频"
                Icon="{ui:SymbolIcon Symbol=Add24}" />
            <ui:Button
                x:Name="OpenFolderButton"
                Margin="10,10"
                Click="OpenFolderButton_Click"
                Content="打开音频文件夹"
                Icon="{ui:SymbolIcon Symbol=FolderOpen24}" />
        </StackPanel>
        <ui:DataGrid
            Margin="10,0"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding AudioFamliy}">
            <ui:DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding icon, Converter={StaticResource IconConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding name}" Header="文件名" />
                <DataGridTemplateColumn Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Command="{Binding DataContext.GetDataCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="打开" />
                                <Button
                                    Margin="5,0,0,0"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Content="删除" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </ui:DataGrid.Columns>
        </ui:DataGrid>
    </StackPanel>
</Page>
