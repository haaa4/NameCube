<Page
    x:Class="NameCube.ToolBox.AutomaticProcessPages.AutomaticProcessSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.ToolBox.AutomaticProcessPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="AutomaticProcessSetting"
    d:DesignHeight="700"
    d:DesignWidth="820"
    SizeChanged="Page_SizeChanged"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid RenderTransformOrigin="0.476,0.437">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Rectangle
                x:Name="Part1"
                Margin="5"
                Fill="#f5f1f1"
                RadiusX="10"
                RadiusY="10" />
            <StackPanel>
                <TextBlock Margin="10" Text="流程组" />
                <ui:ListView
                    x:Name="ProcessGroupsListView"
                    MaxHeight="330"
                    Margin="10"
                    ItemsSource="{Binding ProcessGroups}"
                    SelectionChanged="ProcessGroupsListView_SelectionChanged"
                    SelectionMode="Single">
                    <ui:ListView.ContextMenu>
                        <ContextMenu x:Name="ListContextMenu" Opened="ListContextMenu_Opened">
                            <MenuItem
                                Click="RenameMenuItem_Click"
                                Header="重命名"
                                Icon="{ui:SymbolIcon Symbol=Rename24}" />
                            <MenuItem
                                Click="DeleteMenuItem_Click"
                                Foreground="Red"
                                Header="删除"
                                Icon="{ui:SymbolIcon Symbol=Delete24}" />
                        </ContextMenu>
                    </ui:ListView.ContextMenu>
                </ui:ListView>

            </StackPanel>
            <Rectangle
                Grid.Row="1"
                Margin="5"
                Fill="#f5f1f1"
                RadiusX="10"
                RadiusY="10" />
            <StackPanel Grid.Row="1">
                <TextBlock Margin="10" Text="流程" />
                <ui:ListView
                    x:Name="ProcessesListView"
                    MaxHeight="330"
                    Margin="10"
                    ItemsSource="{Binding ProcessKinds}"
                    SelectionChanged="ProcessesListView_SelectionChanged"
                    SelectionMode="Single">
                    <ui:ListView.ContextMenu>
                        <ContextMenu x:Name="ProcessesListViewContextMenu" Opened="ProcessesListViewContextMenu_Opened">
                            <MenuItem
                                Click="MenuItem_Click"
                                Foreground="Red"
                                Header="删除"
                                Icon="{ui:SymbolIcon Symbol=Delete24}" />
                            <MenuItem
                                x:Name="UpMove"
                                Click="UpMove_Click"
                                Header="上移"
                                Icon="{ui:SymbolIcon Symbol=ChevronUp24}" />
                            <MenuItem
                                x:Name="DownMove"
                                Click="DownMove_Click"
                                Header="下移"
                                Icon="{ui:SymbolIcon Symbol=ChevronDown24}" />
                        </ContextMenu>
                    </ui:ListView.ContextMenu>
                </ui:ListView>
            </StackPanel>
        </Grid>
        <Rectangle
            Grid.Column="1"
            Margin="5"
            Fill="#f5f1f1"
            RadiusX="10"
            RadiusY="10" />

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <TextBlock Margin="10" Text="流程设置" />
            <Grid
                x:Name="Part3"
                Margin="10,60,10,20"
                IsEnabled="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="3"
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="流程类型（当前）" />
                <ComboBox
                    x:Name="ProcessKindComboBox"
                    Grid.Row="3"
                    Grid.Column="1"
                    SelectionChanged="ProcessKindComboBox_SelectionChanged">
                    <ComboBoxItem Content="运行程序" />
                    <ComboBoxItem Content="播放音频" />
                    <ComboBoxItem Content="展示文字" />
                    <ComboBoxItem Content="运行指令" />
                    <ComboBoxItem Content="等待时间" />
                </ComboBox>
                <TextBlock
                    Grid.Row="1"
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Text="准备时间" />
                <TextBlock
                    Grid.Row="2"
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="提醒信息（可选）" />
                <ui:TextBox
                    x:Name="RemindTextTextBox"
                    Grid.Row="2"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="15"
                    PlaceholderText="在这里输入提醒信息" />
                <ui:NumberBox
                    x:Name="RemindTimeNumberBox"
                    Grid.Row="1"
                    Grid.Column="1"
                    LostFocus="RemindTimeNumberBox_LostFocus"
                    Maximum="120"
                    Minimum="1"
                    ValueChanged="RemindTimeNumberBox_ValueChanged" />
                <ui:TextBlock
                    Grid.Row="0"
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="可取消" />
                <CheckBox
                    x:Name="CanCancleCheckBox"
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Center" />
            </Grid>
            <Frame
                x:Name="MainFrame"
                Grid.Row="1"
                Margin="10"
                NavigationUIVisibility="Hidden" />
            <DockPanel Grid.Row="2">
                <ui:Button
                    x:Name="SaveButton"
                    Margin="20"
                    Click="SaveButton_Click"
                    Foreground="Green"
                    Icon="{ui:SymbolIcon Symbol=Save24}"
                    IsEnabled="false">
                    <ui:TextBlock Text="保存" />
                </ui:Button>
                <ui:Button
                    x:Name="BrowseButton"
                    Margin="20"
                    Click="BrowseButton_Click"
                    Foreground="Blue"
                    Icon="{ui:SymbolIcon Symbol=Save24}">
                    <ui:TextBlock Text="保存并浏览" />
                </ui:Button>
            </DockPanel>
        </Grid>
        <ContentPresenter x:Name="Host" Grid.ColumnSpan="2" />
    </Grid>
</Page>