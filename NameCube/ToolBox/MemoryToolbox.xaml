<Page
    x:Class="NameCube.ToolBox.MemoryToolbox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.ToolBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MemoryToolbox"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <ui:CardControl
            Margin="4"
            Padding="20,10,20,10"
            Icon="{ui:SymbolIcon Symbol=Broom24}">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
                        Margin="0"
                        FontTypography="BodyStrong"
                        Text="自动内存清理"
                        TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        Text="开启后，将在后台每隔十分钟清理内存(重启后生效）"
                        TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:ToggleSwitch
                x:Name="MemoryCheck"
                HorizontalContentAlignment="Left"
                Click="MemoryCheck_Click"
                IsEnabled="True"
                OffContent="关"
                OnContent="开" />
        </ui:CardControl>
        <ui:Button
            Margin="5,0,0,0"
            Click="Button_Click"
            Content="现在进行内存清理"
            Icon="ui:SymbolIcon Symbol=Broom24" />
        <ui:SnackbarPresenter x:Name="SnackbarPresenterHost" />
        <ui:SnackbarPresenter x:Name="SnackbarPresenterHost1" />
        <ui:SnackbarPresenter x:Name="SnackbarPresenterHost2" />
    </StackPanel>
</Page>
