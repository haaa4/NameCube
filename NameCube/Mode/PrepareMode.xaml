<Page
    x:Class="NameCube.Mode.PrepareMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.Mode"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="PrepareMode"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />

            </Grid.ColumnDefinitions>
            <TextBlock
                x:Name="NowNumberText"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="120"
                Foreground="#30d7d7"
                Text="XXX"
                Margin="0 30 0 0"/>
            <TextBlock
                x:Name="FinishText"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="120"
                Foreground="#30d7d7"
                Text="XX"
                Visibility="Hidden" 
                Margin="0 30 0 0"/>
            <ui:Button
                x:Name="StartButton"
                Grid.Row="1"
                Grid.Column="2"
                Width="200"
                Height="100"
                Margin="0,40"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="StartButton_Click"
                Content="开始"
                FontFamily="Segoe UI"
                FontSize="72"
                FontWeight="Black" />
            <TextBlock FontSize="30" Text="请以下同学做好准备:" />
            <StackPanel Margin="0,40,0,0">
                <TextBlock
                    x:Name="Ready1"
                    HorizontalAlignment="Left"
                    FontSize="55"
                    Foreground="#30d7d7"
                    Text="XXX" />
                <TextBlock
                    x:Name="Ready2"
                    HorizontalAlignment="Left"
                    FontSize="55"
                    Foreground="#30d7d7"
                    Text="XXX" />
                <TextBlock
                    x:Name="Ready3"
                    HorizontalAlignment="Left"
                    FontSize="55"
                    Foreground="#30d7d7"
                    Text="XXX" />
                <TextBlock
                    x:Name="Ready4"
                    HorizontalAlignment="Left"
                    FontSize="55"
                    Foreground="#30d7d7"
                    Text="XXX" />
                <TextBlock
                    x:Name="Ready5"
                    HorizontalAlignment="Left"
                    FontSize="55"
                    Foreground="#30d7d7"
                    Text="XXX" />
            </StackPanel>
            <StackPanel Margin="0,40,0,0">
                <TextBlock
                    x:Name="FinishReady1"
                    HorizontalAlignment="Left"
                    FontSize="55"
                    Foreground="#30d7d7"
                    Text="XXX"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="FinishReady2"
                    HorizontalAlignment="Left"
                    FontSize="55"
                    Foreground="#30d7d7"
                    Text="XXX"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="FinishReady3"
                    HorizontalAlignment="Left"
                    FontSize="55"
                    Foreground="#30d7d7"
                    Text="XXX"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="FinishReady4"
                    HorizontalAlignment="Left"
                    FontSize="55"
                    Foreground="#30d7d7"
                    Text="XXX"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="FinishReady5"
                    HorizontalAlignment="Left"
                    FontSize="55"
                    Foreground="#30d7d7"
                    Text="XXX"
                    Visibility="Hidden" />
            </StackPanel>
            <StackPanel Margin="0,40,0,0">
                <TextBlock
                    x:Name="BeforeReady1"
                    HorizontalAlignment="Right"
                    FontSize="55"
                    Foreground="Black"
                    Text="XXX"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="BeforeReady2"
                    HorizontalAlignment="Right"
                    FontSize="55"
                    Foreground="Black"
                    Text="XXX"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="BeforeReady3"
                    HorizontalAlignment="Right"
                    FontSize="55"
                    Foreground="Black"
                    Text="XXX"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="BeforeReady4"
                    HorizontalAlignment="Right"
                    FontSize="55"
                    Foreground="Black"
                    Text="XXX"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="BeforeReady5"
                    HorizontalAlignment="Right"
                    FontSize="55"
                    Foreground="Black"
                    Text="XXX"
                    Visibility="Hidden" />
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <CheckBox
                x:Name="SpeakCheck"
                Click="SpeechCheck_Click"
                Content="启用语音"
                FontWeight="Black" />
        </StackPanel>

    </Grid>
</Page>
