<Page x:Class="NameCube.Mode.PrepareMode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NameCube.Mode"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PrepareMode">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>

            </Grid.ColumnDefinitions>
            <TextBlock x:Name="NowNumberText" Text="XXX" FontSize="120" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#30d7d7" Grid.Column="2" />
            <TextBlock x:Name="FinishText" Text="XX" FontSize="120" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#30d7d7" Visibility="Hidden" Grid.Column="2"/>
            <ui:Button x:Name="StartButton" Grid.Row="1" HorizontalAlignment="Center"  
                       Width="200" Height="100" FontSize="72" FontFamily="Segoe UI"  Content="开始" 
                       FontWeight="Black" Click="StartButton_Click" Grid.Column="2" VerticalAlignment="Bottom" 
                       Margin="0 40"/>
            <TextBlock Text="请以下同学做好准备:" FontSize="30" />
            <StackPanel Margin="0 40 0 0">
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Left" Foreground="#30d7d7" x:Name="Ready1"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Left" Foreground="#30d7d7" x:Name="Ready2"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Left" Foreground="#30d7d7" x:Name="Ready3"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Left" Foreground="#30d7d7" x:Name="Ready4"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Left" Foreground="#30d7d7" x:Name="Ready5"/>
            </StackPanel>
            <StackPanel Margin="0 40 0 0">
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Left" Foreground="#30d7d7" x:Name="FinishReady1" Visibility="Hidden"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Left" Foreground="#30d7d7" x:Name="FinishReady2" Visibility="Hidden"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Left" Foreground="#30d7d7" x:Name="FinishReady3" Visibility="Hidden"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Left" Foreground="#30d7d7" x:Name="FinishReady4" Visibility="Hidden"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Left" Foreground="#30d7d7" x:Name="FinishReady5" Visibility="Hidden"/>
            </StackPanel>
            <StackPanel Margin="0 40 0 0">
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Right" Foreground="Black" x:Name="BeforeReady1" Visibility="Hidden"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Right" Foreground="Black" x:Name="BeforeReady2" Visibility="Hidden"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Right" Foreground="Black" x:Name="BeforeReady3" Visibility="Hidden"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Right" Foreground="Black" x:Name="BeforeReady4" Visibility="Hidden"/>
                <TextBlock Text="XXX" FontSize="55" HorizontalAlignment="Right" Foreground="Black" x:Name="BeforeReady5" Visibility="Hidden"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <CheckBox Content="启用语音" FontWeight="Black" x:Name="SpeakCheck"  Click="SpeechCheck_Click"/>
        </StackPanel>

    </Grid>
</Page>
