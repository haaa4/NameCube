<Page
    x:Class="NameCube.Mode.NumberMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.Mode"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:sys="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="NumberMode"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Page.Resources>
        <Storyboard x:Key="JumpStoryBoard" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="NowNumberText" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0" />
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="-21.406" />
                <EasingDoubleKeyFrame KeyTime="00:00:00.4000000" Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="NowNumberText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="200"
            Foreground="#30d7d7"
            RenderTransformOrigin="0.5,0.5"
            Text="XX">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock
            x:Name="FinishText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="200"
            Foreground="#30d7d7"
            Text="XX"
            Visibility="Hidden" />
        <ui:Button
            x:Name="StartButton"
            Grid.Row="1"
            Width="200"
            Height="100"
            HorizontalAlignment="Center"
            Click="StartButton_Click"
            Content="开始"
            FontFamily="Segoe UI"
            FontSize="72"
            FontWeight="Black" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <CheckBox
                x:Name="SpeakCheck"
                Click="SpeechCheck_Click"
                Content="启用语音"
                FontWeight="Black" />
            <ui:NumberBox
                x:Name="NumberBox"
                Maximum="300"
                Minimum="1"
                TextChanged="NumberBox_TextChanged"
                ValueChanged="NumberBox_ValueChanged"
                Value="53" />
            <ui:Button
                x:Name="Button1"
                Margin="10,0,0,0"
                Click="Button_Click"
                Content="设置为档案人数" />
        </StackPanel>

    </Grid>
</Page>
