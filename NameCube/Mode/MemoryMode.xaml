<Page
    x:Class="NameCube.Mode.MemoryMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dia="http://schemas.lepo.co/wpfui/2022/xaml/violeta"
    xmlns:local="clr-namespace:NameCube.Mode"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MemoryMode"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Page.Resources>
        <Storyboard x:Key="JumpStoryBoard" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="NowNumberText" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0" />
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="-20" />
                <EasingDoubleKeyFrame KeyTime="00:00:00.4000000" Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="flicker">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ellipse" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1.043"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="11.788"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ellipse" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1.076"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="12.161"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ellipse" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1.084"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="0.001"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ellipse" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1.898"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="0.292"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ellipse" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.1000000" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="_flicker">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ellipse" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0.88"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="15.64"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ellipse" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0.94"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="9.64"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ellipse" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-3"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="366"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ellipse" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1.5"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.3000000" Value="-216"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            x:Name="NowNumberText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="200"
            Foreground="#30d7d7"
            RenderTransformOrigin="0.5,0.5"
            Text="XXX">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock
            x:Name="FinishText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="200"
            Foreground="#30d7d7"
            Text="XXX"
            Visibility="Hidden" />
        <ui:Button
            x:Name="StartButton"
            Grid.Row="1"
            Width="200"
            Height="100"
            HorizontalAlignment="Center"
            Click="StartButton_Click"
            Content="开始"
            FontFamily="Segoe UI"
            FontSize="36"
            FontWeight="Black" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <CheckBox
                x:Name="SpeakCheck"
                Click="SpeechCheck_Click"
                Content="启用语音"
                FontWeight="Black" />
            <ComboBox
                x:Name="ComboBox"
                ItemsSource="{Binding AllFiles}"
                SelectedItem="1"
                SelectionChanged="ComboBox_SelectionChanged" />
            <ui:Button
                x:Name="ChangeButton"
                Margin="12,0,0,0"
                Click="ChangeButton_Click"
                Content="转为常驻名单" />
            <ui:Button
                Margin="12,0,0,0"
                Click="Button_Click_1"
                Content="添加临时名单" />
            <ui:Button
                x:Name="DelButton"
                Margin="12,0,0,0"
                Click="Button_Click"
                Content="删除此名单"
                Foreground="Red" />
        </StackPanel>
        <ui:DataGrid
            x:Name="DataGrid"
            Grid.RowSpan="2"
            Grid.Column="1"
            MaxHeight="400"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserResizeColumns="False"
            CanUserResizeRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding AllNames}">
            <ui:DataGrid.Columns>
                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding}"
                    Header="姓名" />
            </ui:DataGrid.Columns>
        </ui:DataGrid>
        <ContentPresenter
            x:Name="RootContentDialogPresenter"
            Grid.RowSpan="3"
            Grid.ColumnSpan="2" 
            d:Visibility="Collapsed"/>
        <Ellipse x:Name="ellipse" HorizontalAlignment="Center" Height="50" Grid.Row="1" VerticalAlignment="Center" Width="50" Fill="{Binding Foreground, ElementName=NowNumberText}" Panel.ZIndex="-2" Opacity="0.005" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
    </Grid>
</Page>
