<Page
    x:Class="NameCube.Mode.MemoryMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dia="http://schemas.lepo.co/wpfui/2022/xaml/violeta"
    xmlns:local="clr-namespace:NameCube.Mode"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MemoryMode"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            x:Name="NowNumberText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="200"
            Foreground="#30d7d7"
            Text="XXX" />
        <TextBlock
            x:Name="FinishText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="200"
            Foreground="#30d7d7"
            Text="XXX"
            Visibility="Hidden" />
        <ui:Button
            x:Name="StartButton"
            Grid.Row="1"
            Width="200"
            Height="100"
            HorizontalAlignment="Center"
            Click="StartButton_Click"
            Content="开始"
            FontFamily="Segoe UI"
            FontSize="72"
            FontWeight="Black" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <CheckBox
                x:Name="SpeakCheck"
                Click="SpeechCheck_Click"
                Content="启用语音"
                FontWeight="Black" />
            <ComboBox
                x:Name="ComboBox"
                ItemsSource="{Binding AllFiles}"
                SelectedItem="1"
                SelectionChanged="ComboBox_SelectionChanged" />
            <ui:Button
                x:Name="ChangeButton"
                Margin="12,0,0,0"
                Click="ChangeButton_Click"
                Content="转为常驻名单" />
            <ui:Button
                Margin="12,0,0,0"
                Click="Button_Click_1"
                Content="添加临时名单" />
            <ui:Button
                x:Name="DelButton"
                Margin="12,0,0,0"
                Click="Button_Click"
                Content="删除此名单"
                Foreground="Red" />
        </StackPanel>
        <ui:DataGrid
            x:Name="DataGrid"
            Grid.RowSpan="2"
            Grid.Column="1"
            MaxHeight="400"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserResizeColumns="False"
            CanUserResizeRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding AllNames}">
            <ui:DataGrid.Columns>
                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding}"
                    Header="姓名" />
            </ui:DataGrid.Columns>
        </ui:DataGrid>
        <ContentPresenter
            x:Name="RootContentDialogPresenter"
            Grid.RowSpan="3"
            Grid.ColumnSpan="2" />
    </Grid>
</Page>
