<Page x:Class="NameCube.Setting.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NameCube"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="About">

    <Grid>
        <StackPanel>
            <ui:Image Source="pack://application:,,,/icon.ico" Height="170"/>
            <TextBlock Text="学号魔方" FontSize="55" HorizontalAlignment="Center"/>
            <TextBlock Text="NameCube" FontSize="30" HorizontalAlignment="Center"/>
            <TextBlock>版本名：Alpha-6</TextBlock>
            <TextBlock>版本信息：悬浮球高级测试</TextBlock>
            <TextBlock>作者：哈阿斯（haaa4)</TextBlock>
            <TextBlock>最后编译时间：2025年4月6日</TextBlock>
            <ui:HyperlinkButton
                    Grid.Column="0"
                    Content="github项目"
                    Icon="{ui:SymbolIcon Link24}"
                    NavigateUri="https://github.com/haaa4/NameCube" />
            <ui:HyperlinkButton
                 Grid.Column="0"
                 Content="作者B站主页"
                 Icon="{ui:SymbolIcon Link24}"
                 NavigateUri="https://space.bilibili.com/1440486452" />
            <TextBlock Text="♪永不放弃你，从不让你失望 永不舍弃你 永不让你哭泣，从不对你说再见♪" FontStyle="Italic" Margin="5 0 0 0"/>
            <TextBlock Text="问：这个版本本软件不是要改名换图标了吗？答：没时间弄" FontStyle="Italic" Margin="5 0 0 0"/>
        </StackPanel>
    </Grid>
</Page>
