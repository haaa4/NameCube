<Page
    x:Class="NameCube.Setting.DebugPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.Setting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DebugPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <ui:InfoBar
            Title="警告"
            IsClosable="False"
            IsOpen="True"
            Message="这些功能仅用于调试，谨慎使用！所造成的一切后果作者一律不负责！"
            Severity="Warning" />
        <ui:Button
            Margin="10"
            Click="ExitButton_Click"
            Content="退出调试" />
        <ui:Button
            Margin="10,0,0,0"
            Click="Button_Click"
            Content="空引用异常1" />
        <ui:Button
            Margin="10,0,0,0"
            Click="Button_Click_1"
            Content="空引用异常2" />
        <ui:Button
            Margin="10,0,0,0"
            Click="Button_Click_2"
            Content="索引越界异常1" />
        <ui:Button
            Margin="10,0,0,0"
            Click="Button_Click_3"
            Content="索引越界异常2" />
        <ui:Button
            Margin="10,0,0,0"
            Click="Button_Click_4"
            Content="堆栈溢出异常(无报错)" />
        <ui:Button
            Margin="10,0,0,0"
            Click="Button_Click_5"
            Content="内存不足异常" />
        <ui:Button
            Margin="10,0,0,0"
            Click="Button_Click_6"
            Content="多线程竞争条件异常" />
    </StackPanel>
</Page>
