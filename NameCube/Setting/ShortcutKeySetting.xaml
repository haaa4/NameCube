<Page
    x:Class="NameCube.Setting.ShortcutKeySetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.Setting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ShortcutKeySetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <StackPanel>
            <ui:InfoBar
            Title="提醒"
            IsClosable="False"
            IsOpen="True"
            Message="快捷键功能测试阶段，未来可能不兼容当前数据" />
            <ui:CardAction Icon="{ui:SymbolIcon Symbol=Add16}" Content="新建组合" Margin="5 5" Click="CardAction_Click"/>
        </StackPanel>
        <ContentPresenter x:Name="Host"/>

    </Grid>

</Page>
