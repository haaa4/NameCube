<Page
    x:Class="NameCube.Setting.ShortcutKeySetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.Setting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ShortcutKeySetting"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Grid>

        <StackPanel>
            <ui:InfoBar
                Title="提醒"
                IsClosable="False"
                IsOpen="True"
                Message="快捷键功能测试阶段，未来可能不兼容当前数据" />
            <!--  如果以后性能问题严重，就可以使用此等待条  -->
            <ProgressBar
                x:Name="WaitingProcessBar"
                Height="8"
                IsIndeterminate="True" />
            <StackPanel x:Name="ShortCutHost">
                <ui:CardAction Margin="5,5">
                    <StackPanel>
                        <TextBlock
                            FontSize="20"
                            FontWeight="Black"
                            Text="Test（Test Test）" />
                        <TextBlock FontSize="20" Text="Test Test Test Test" />
                    </StackPanel>
                </ui:CardAction>
            </StackPanel>

            <ui:CardAction
                x:Name="AddCardAction"
                Margin="5,5"
                Click="CardAction_Click"
                Content="新建按键组"
                Icon="{ui:SymbolIcon Symbol=Add16}" />
        </StackPanel>
        <ContentPresenter x:Name="Host" />

    </Grid>

</Page>
