<Page
    x:Class="NameCube.Setting.Updata"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.Setting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Updata"
    d:DesignHeight="450"
    FontFamily="{StaticResource AppFont}"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock
        HorizontalAlignment="Center"
        FontSize="30"
        Text="当前版本" />
            <TextBlock
        x:Name="VersionText"
        HorizontalAlignment="Center"
        FontSize="50"
        Text="Unknow" />
            <ProgressBar
        x:Name="NowProgressBar"
        Height="10"
        Margin="10,0"
        Maximum="100"
        Minimum="0"
        Value="100" />
            <TextBlock
        x:Name="CaseText"
        Margin="10,0"
        FontSize="20"
        Text="当前已是最新版本" />
            <TextBlock
        x:Name="CheckText"
        Margin="10,0"
        FontSize="20"
        Text="上次检查时间：Unknow" />
            <ui:Button
        x:Name="CheckButton"
        Margin="10"
        Appearance="Primary"
        Click="CheckButton_Click"
        Content="检查更新"
        FontWeight="Black" 
                IsEnabled="False"/>
            <ui:Button
x:Name="UpkButton"
Margin="10,0,0,10"
Appearance="Primary"
Click="UpkButton_Click"
Content="更新至最新版本"
        IsEnabled="False"
FontWeight="Black" />
            <ui:Button Margin="10,0,0,0" Content="从本地安装">
                <ui:FlyoutService.Flyout>
                    <ui:Flyout Placement="Bottom">
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Left" Text="请确保更新文件是正确的，否则可能导致软件丢失！" />
                            <Button
                        x:Name="UpdataFromComputerButton"
                        Click="UpdataFromComputerButton_Click" 
                                IsEnabled="False"
                        Content="继续" />
                        </StackPanel>
                    </ui:Flyout>
                </ui:FlyoutService.Flyout>
            </ui:Button>
            <ui:CardControl
        Margin="4"
        Padding="20,10,20,10"
        Icon="{ui:SymbolIcon Symbol=DualScreenUpdate24}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                    Margin="0"
                    FontTypography="BodyStrong"
                    Text="更新获取"
                    TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                    Appearance="Secondary"
                    Text="测试版本包括未完成的功能，请谨慎选择"
                    TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ComboBox x:Name="UpdataWayComboBox" SelectionChanged="UpdataWayComboBox_SelectionChanged">
                    <ComboBoxItem Content="仅正式版本" />
                    <ComboBoxItem Content="所有版本" />
                </ComboBox>

            </ui:CardControl>
            <ui:InfoBar
        x:Name="WarningInfo"
        Title="注意"
        Message="在测试版本中更新，可能会更新至之前的正式版本，请注意版本号"
        Severity="Warning" />
            <ui:CardControl
        Margin="4"
        Padding="20,10,20,10"
        Icon="{ui:SymbolIcon Symbol=Alert20}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                    Margin="0"
                    FontTypography="BodyStrong"
                    Text="自动检查"
                    TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                    Appearance="Secondary"
                    Text="应用启动时，将会自动检测最新版本"
                    TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:ToggleSwitch
            x:Name="AutoStart"
            HorizontalContentAlignment="Left"
            Click="AutoStart_Click"
            IsEnabled="True"
            OffContent="关"
            OnContent="开" />

            </ui:CardControl>
            <ui:CardControl
        Margin="4"
        Padding="20,10,20,10"
        Icon="{ui:SymbolIcon Symbol=DocumentPageTopCenter24}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                    Margin="0"
                    FontTypography="BodyStrong"
                    Text="自定义用户令牌"
                    TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                    Appearance="Secondary"
                    TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:TextBox
            x:Name="tokenText"
            Width="200"
            TextChanged="tokenText_TextChanged" />
            </ui:CardControl>
            <ui:HyperlinkButton
        Content="无法连接？"
        Icon="{ui:SymbolIcon Link24}"
        NavigateUri="https://docs.qq.com/doc/DZmhXS3BvYnZHWnRy" />
        </StackPanel>
        <ui:Border Background="Gray" Opacity="0.3">
        </ui:Border>
        <ui:Border Background="White" Width="300" Height="250" CornerRadius="20,20,20,20">
            <Canvas>
                <TextBlock Text="施工中....." Canvas.Left="94" Canvas.Top="24" FontSize="22"/>
                <Image Source="/Image/fKiaOuWUr.png" Height="147" Width="156" Canvas.Left="75.992" Canvas.Top="53.173" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBlock Canvas.Left="19.883" Canvas.Top="191.206" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top"><Run Language="zh-cn" Text="该功能重构中，请等待下一个版本"/><Run Text="....."/></TextBlock>
                <ui:HyperlinkButton Content="查看最新版本" Canvas.Left="87.917" Canvas.Top="217.422" VerticalAlignment="Top" Click="HyperlinkButton_Click_1"/>
            </Canvas>
        </ui:Border>
    </Grid>
</Page>
