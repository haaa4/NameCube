<Page
    x:Class="NameCube.Setting.Document"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.ToolBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Document"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="{StaticResource AppFont}"
    mc:Ignorable="d">

    <StackPanel>
        <ui:InfoBar
            Title="警告"
            IsClosable="False"
            IsOpen="True"
            Message="对于手动修改配置文件导致的应用异常，不在修复范围内！"
            Severity="Warning" />
        <ui:CardAction
            Margin="5,0"
            Click="CardAction_Click"
            Content="打开配置文件文件夹"
            Icon="{ui:SymbolIcon Symbol=WindowSettings20}" />
        <ui:CardAction
    Margin="5,0"
    Click="CardAction_Click_5"
    Content="打开用户数据文件夹"
    Icon="{ui:SymbolIcon Symbol=WindowSettings20}" />
        
        <ui:CardControl
            Margin="5 5 5 5"   >
            <StackPanel HorizontalAlignment="Left" Width="745">
                <ui:TextBlock Text="配置操作" Margin="10"  HorizontalAlignment="Left"/>
                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Left" >
                   
                    <ui:Button
Margin="5,0"
HorizontalAlignment="Center"
Content="清空数据"
Foreground="Red"
Icon="{ui:SymbolIcon Symbol=Delete12}">
                        <ui:FlyoutService.Flyout>
                            <ui:Flyout Placement="Bottom">
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Left" Text="你确定继续执行操作吗？这将从你的硬盘上彻底删除配置文件" />
                                    <Button Click="CardAction_Click_2" Content="确定" />
                                </StackPanel>
                            </ui:Flyout>
                        </ui:FlyoutService.Flyout>
                    </ui:Button>
                    <ui:Button
Margin="5,0"
HorizontalAlignment="Center"
Click="CardAction_Click_3"
Content="备份数据"
Icon="{ui:SymbolIcon Symbol=DocumentArrowUp20}" />
                    <ui:Button
Margin="5,0"
HorizontalAlignment="Center"
Content="从备份文件还原"
Foreground="Red"
Icon="{ui:SymbolIcon Symbol=DocumentArrowDown20}">
                        <ui:FlyoutService.Flyout>
                            <ui:Flyout Placement="Bottom">
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Left" Text="你确定继续执行操作吗？这将从你的硬盘上彻底删除原有的配置文件" />
                                    <Button Click="CardAction_Click_4" Content="确定" />
                                </StackPanel>
                            </ui:Flyout>
                        </ui:FlyoutService.Flyout>
                    </ui:Button>
                </DockPanel>

            </StackPanel>
            
        </ui:CardControl>
    </StackPanel>
</Page>
