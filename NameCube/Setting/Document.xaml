<Page x:Class="NameCube.Setting.Document"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NameCube.ToolBox"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Document">

    <StackPanel>
        <ui:CardAction Icon="{ui:SymbolIcon Symbol=WindowSettings20}" 
                       Content="打开软件配置文件文件夹" Click="CardAction_Click"  Margin="5 0"/>
        <ui:CardAction Icon="{ui:SymbolIcon Symbol=Delete12}" 
               Content="删除非必要文件" Click="CardAction_Click_1"  Margin="5 0"/>
        <ui:CardAction Icon="{ui:SymbolIcon Symbol=Delete12}" 
               Content="删除所有配置文件(危险操作）" Foreground="Red" Click="CardAction_Click_2"  Margin="5 0"/>
        <ui:CardAction Icon="{ui:SymbolIcon Symbol=DocumentArrowUp20}" 
               Content="打包所有配置文件" Click="CardAction_Click_3"  Margin="5 0"/>
        <ui:CardAction Icon="{ui:SymbolIcon Symbol=DocumentArrowDown20}" 
               Content="导入并覆盖配置文件(危险操作）" Foreground="Red" Click="CardAction_Click_4"  Margin="5 0"/>
    </StackPanel>
</Page>
