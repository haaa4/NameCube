<Page
    x:Class="NameCube.Setting.Document"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.ToolBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Document"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <ui:InfoBar
            Title="警告"
            IsClosable="False"
            IsOpen="True"
            Message="对于手动修改配置文件导致的应用异常，不在修复范围内！"
            Severity="Warning" />
        <ui:CardAction
            Margin="5,0"
            Click="CardAction_Click"
            Content="打开软件配置文件文件夹"
            Icon="{ui:SymbolIcon Symbol=WindowSettings20}" />
        <ui:CardControl
            Margin="4"
            Padding="20,10,20,10"
            Icon="{ui:SymbolIcon Symbol=Save24}">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
                        Margin="0"
                        FontTypography="BodyStrong"
                        Text="储存位置"
                        TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        Text="选择将配置文件放在那个文件夹"
                        TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ComboBox x:Name="ModeCombox" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="应用目录" />
                <ComboBoxItem Content="用户AppData文件夹" />
            </ComboBox>
        </ui:CardControl>
        <ui:Button
            Width="300"
            Height="60"
            Margin="5,0"
            HorizontalAlignment="Center"
            Content="删除非必要文件"
            Icon="{ui:SymbolIcon Symbol=Delete12}">
            <ui:FlyoutService.Flyout>
                <ui:Flyout Placement="Bottom">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Left" Text="确定删除日志及备份文件吗？" />
                        <Button Click="CardAction_Click_1" Content="确定" />
                    </StackPanel>
                </ui:Flyout>
            </ui:FlyoutService.Flyout>
        </ui:Button>
        <ui:Button
            Width="300"
            Height="60"
            Margin="5,0"
            HorizontalAlignment="Center"
            Content="删除所有配置文件(危险操作）"
            Foreground="Red"
            Icon="{ui:SymbolIcon Symbol=Delete12}">
            <ui:FlyoutService.Flyout>
                <ui:Flyout Placement="Bottom">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Left" Text="你确定继续执行操作吗？这将从你的硬盘上彻底删除配置文件" />
                        <Button Click="CardAction_Click_2" Content="确定" />
                    </StackPanel>
                </ui:Flyout>
            </ui:FlyoutService.Flyout>
        </ui:Button>
        <ui:Button
            Width="300"
            Height="60"
            Margin="5,0"
            HorizontalAlignment="Center"
            Click="CardAction_Click_3"
            Content="打包所有配置文件"
            Icon="{ui:SymbolIcon Symbol=DocumentArrowUp20}" />
        <ui:Button
            Width="300"
            Height="60"
            Margin="5,0"
            HorizontalAlignment="Center"
            Content="导入并覆盖配置文件(危险操作）"
            Foreground="Red"
            Icon="{ui:SymbolIcon Symbol=DocumentArrowDown20}">
            <ui:FlyoutService.Flyout>
                <ui:Flyout Placement="Bottom">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Left" Text="你确定继续执行操作吗？这将从你的硬盘上彻底删除原有的配置文件" />
                        <Button Click="CardAction_Click_4" Content="确定" />
                    </StackPanel>
                </ui:Flyout>
            </ui:FlyoutService.Flyout>
        </ui:Button>
    </StackPanel>
</Page>
