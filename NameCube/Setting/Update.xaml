<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NameCube.Setting"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="NameCube.Setting.Update"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Update">

    <StackPanel>
        <TextBlock Text="当前版本：" FontSize="30"/>
        <TextBlock Text="UnKnow" FontSize="40" x:Name="VersionText"/>
        <Button Content="检查更新（敬请期待）" IsEnabled="False" FontSize="30"/>
        <Button Content="从本地安装" Click="Button_Click" x:Name="ComputerButton"/>
        <TextBlock x:Name="NowText"/>
        <ui:ProgressRing IsIndeterminate="True" HorizontalAlignment="Left" Visibility="Hidden" x:Name="Ring"/>
    </StackPanel>
</Page>
