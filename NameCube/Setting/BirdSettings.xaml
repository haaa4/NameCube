<Page
    x:Class="NameCube.Setting.BirdSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube.Setting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="BirdSettings"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <ui:CardControl
                Margin="4"
                Padding="20,10,20,10"
                Icon="{ui:SymbolIcon Symbol=SportBaseball24}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                            Margin="0"
                            FontTypography="BodyStrong"
                            Text="悬浮球"
                            TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                            Appearance="Secondary"
                            Text="开启后，将在桌面显示悬浮球(重启后应用）"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:ToggleSwitch
                    x:Name="BallCheck"
                    HorizontalContentAlignment="Left"
                    Click="BallCheck_Click"
                    IsEnabled="True"
                    OffContent="关"
                    OnContent="开" />
            </ui:CardControl>
            <ui:SnackbarPresenter x:Name="SnackbarPresenterHost" />
            <ui:CardControl
                Margin="4"
                Padding="20,10,20,10"
                Icon="{ui:SymbolIcon Symbol=CursorClick24}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                            Margin="0"
                            FontTypography="BodyStrong"
                            Text="主界面启动方式"
                            TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                            Appearance="Secondary"
                            Text="选择适合的启动方式"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ComboBox x:Name="StartWayComboBox" SelectionChanged="StartWayComboBox_SelectionChanged">
                    <ComboBoxItem Content="左键" />
                    <ComboBoxItem Content="右键" />
                    <ComboBoxItem Content="长按" />
                    <ComboBoxItem Content="左键+右键" />
                    <ComboBoxItem Content="长按+右键" />
                </ComboBox>

            </ui:CardControl>
            <ui:CardControl
                Margin="4"
                Padding="20,10,20,10"
                Icon="{ui:SymbolIcon Symbol=Image28}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                            Margin="0"
                            FontTypography="BodyStrong"
                            Text="图标图片"
                            TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                            Appearance="Secondary"
                            Text="点击右侧可自定义图标文件"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <StackPanel>
                    <ui:ProgressRing
                        x:Name="Ring"
                        Width="90"
                        Height="90"
                        IsIndeterminate="True"
                        Visibility="Collapsed" />
                    <ui:Image
                        x:Name="ImageIcon"
                        Width="90"
                        Height="90"
                        MouseDown="ImageIcon_MouseDown"
                        Source="pack://application:,,,/BallPicture.png" />
                    <Button
                        HorizontalAlignment="Center"
                        Click="Button_Click_1"
                        Content="恢复默认" />
                </StackPanel>

            </ui:CardControl>
            <ui:CardControl
                Margin="4"
                Padding="20,10,20,10"
                Icon="{ui:SymbolIcon Symbol=PaddingLeft24}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                            Margin="0"
                            FontTypography="BodyStrong"
                            Text="吸附阈值"
                            TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                            Appearance="Secondary"
                            Text="阈值越高，图标越容易被吸附屏幕上"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <Slider
                    x:Name="ABSlider"
                    Maximum="120"
                    Minimum="0"
                    ValueChanged="ABSlider_ValueChanged" />

            </ui:CardControl>
            <ui:CardControl
                Margin="4"
                Padding="20,10,20,10"
                Icon="{ui:SymbolIcon Symbol=PaddingLeft24}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                            Margin="0"
                            FontTypography="BodyStrong"
                            Text="自动吸附"
                            TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                            Appearance="Secondary"
                            Text="一段时间未吸附后，图标自动吸附到最近的屏幕上"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ui:ToggleSwitch
                    x:Name="AutoAdsorb"
                    HorizontalContentAlignment="Left"
                    Click="AutoAdsorb_Click"
                    IsEnabled="True"
                    OffContent="关"
                    OnContent="开" />

            </ui:CardControl>

            <ui:CardControl
                Margin="4"
                Padding="20,10,20,10"
                Icon="{ui:SymbolIcon Symbol=Eye12}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                            Margin="0"
                            FontTypography="BodyStrong"
                            Text="悬浮球透明度"
                            TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                            Appearance="Secondary"
                            Text="这个还需要解释啥(⊙_⊙)?"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <Slider
                    x:Name="Diaphaneity"
                    Maximum="100"
                    Minimum="10"
                    ValueChanged="Diaphaneity_ValueChanged" />

            </ui:CardControl>
            <ui:CardControl
                Margin="4"
                Padding="20,10,20,10"
                Icon="{ui:SymbolIcon Symbol=Location24}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                            Margin="0"
                            FontTypography="BodyStrong"
                            Text="悬浮球启动位置"
                            TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                            Appearance="Secondary"
                            Text="在应用启动时，悬浮球应该出现的位置"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <ComboBox
                    x:Name="StartLocationWay"
                    MinWidth="100"
                    SelectionChanged="StartLocationWay_SelectionChanged">
                    <ComboBoxItem Content="屏幕左侧" />
                    <ComboBoxItem Content="屏幕右侧" />
                    <ComboBoxItem Content="上一次位置" />
                </ComboBox>
            </ui:CardControl>
            <ui:CardControl
                Margin="4"
                Padding="20,10,20,10"
                Icon="{ui:SymbolIcon Symbol=ArrowAutofitWidth24}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                            Margin="0"
                            FontTypography="BodyStrong"
                            Text="悬浮球宽度"
                            TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                            Appearance="Secondary"
                            Text="通过调整悬浮球宽度，以达到更好的显示与互动效果"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <Slider
                    x:Name="BallWidth"
                    Maximum="150"
                    Minimum="10"
                    ValueChanged="BallWidthHeight_ValueChanged" />
            </ui:CardControl>
            <ui:CardControl
                Margin="4"
                Padding="20,10,20,10"
                Icon="{ui:SymbolIcon Symbol=ArrowAutofitHeight24}">
                <ui:CardControl.Header>
                    <StackPanel>
                        <ui:TextBlock
                            Margin="0"
                            FontTypography="BodyStrong"
                            Text="悬浮球高度"
                            TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                            Appearance="Secondary"
                            Text="通过调整悬浮球高度，以达到更好的显示与互动效果"
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </ui:CardControl.Header>
                <Slider
                    x:Name="BallHeight"
                    Maximum="150"
                    Minimum="10"
                    ValueChanged="BallWidthHeight_ValueChanged" />
            </ui:CardControl>

            <ui:CardAction
                Margin="4"
                Click="Button_Click"
                Content="重启软件"
                Icon="{ui:SymbolIcon Symbol=ArchiveArrowBack28}" />

        </StackPanel>
    </Grid>

</Page>
