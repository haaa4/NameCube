<Page x:Class="NameCube.Setting.LogSetting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NameCube.Setting"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Loaded="Page_Loaded"
      FontFamily="{StaticResource AppFont}"
      Title="LogSetting">

    <StackPanel>
        <ui:CardAction
    Margin="5,0"
    Click="CardAction_Click"
    Content="打开日志目录"
    Icon="{ui:SymbolIcon Symbol=FolderOpen24}" />
        <ui:CardControl
    Margin="4"
    Padding="20,10,20,10"
    Icon="{ui:SymbolIcon Symbol=Pen24}">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
                Margin="0"
                FontTypography="BodyStrong"
                Text="日志最低等级"
                TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
                Appearance="Secondary"
                Text="更低的等级可能会导致卡顿"
                TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ComboBox x:Name="LogLevelComboBox" SelectionChanged="LogLevelComboBox_SelectionChanged">
                <ComboBoxItem Content="调试" />
                <ComboBoxItem Content="信息" />
                <ComboBoxItem Content="警告" />
                <ComboBoxItem Content="错误" />
            </ComboBox>

        </ui:CardControl>
    </StackPanel>
    
</Page>
