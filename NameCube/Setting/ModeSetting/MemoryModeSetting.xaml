<Page x:Class="NameCube.Setting.ModeSetting.MemoryModeSetting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:NameCube.Setting.ModeSetting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MemoryModeSetting">

    <StackPanel>
        <ui:CardControl
        Margin="4"
        Padding="20,10,20,10"
        Icon="{ui:SymbolIcon Symbol=LockClosed20}">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
            Margin="0"
            FontTypography="BodyStrong"
            Text="禁用修改"
            TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
            Appearance="Secondary"
            Text="主界面不允许修改设置"
            TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:ToggleSwitch
       HorizontalContentAlignment="Left"
       IsEnabled="True"
       OffContent="关"
       OnContent="开" 
       x:Name="LockedCheck"
        Click="LockedCheck_Click"/>
        </ui:CardControl>
        <ui:CardControl
Margin="4"
Padding="20,10,20,10"
Icon="{ui:SymbolIcon Symbol=TopSpeed24}">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock
            Margin="0"
            FontTypography="BodyStrong"
            Text="速度"
            TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
            Appearance="Secondary"
            Text="改变文字的跳动速度"
            TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </ui:CardControl.Header>
            <Slider Grid.Column="1" VerticalAlignment="Center" Maximum="90" Value="100"  x:Name="Speed" ValueChanged="Speed_ValueChanged"/>
        </ui:CardControl>
    </StackPanel>
</Page>
