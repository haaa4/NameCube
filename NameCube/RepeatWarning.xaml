<ui:FluentWindow
    x:Class="NameCube.RepeatWarning"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NameCube"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="点名魔方"
    Width="680"
    Height="380"
    Closing="FluentWindow_Closing"
    mc:Ignorable="d">
    <StackPanel>
        <ui:TitleBar
            Title="点鸣魔方"
            Grid.Row="0"
            Icon="{ui:ImageIcon 'icon.png'}" />
        <TextBlock Margin="10,0,0,0" Text="点鸣魔方已经启动，应用暂不支持多开，如果你是长期运行模式，请检查您的用户托盘（如下图）。如果未发现，请尝试任务管理器关闭应用" 
                   x:Name="Text"
                   TextWrapping="Wrap"/>
        <ui:Image
            MaxHeight="200"
            Margin="20"
            Source="Image/RepeatWarning.png" 
            x:Name="Image"/>
        <ui:Button
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Appearance="Primary"
            Click="Button_Click"
            Content="       我知道了       "
            FontSize="30" />
    </StackPanel>
</ui:FluentWindow>
